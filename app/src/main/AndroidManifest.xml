        </activity>

        <activity
            android:name=".sections.setting.SettingActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.order.OrderDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.order.PayDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.order.PayActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.setting.AuthorizationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.about.CreditManagementActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.about.PersonalInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.about.ShopInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.about.BankCardInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.about.BankCardInfoStepTwoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.about.IdentityVerifyActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".sections.about.ContactInfoActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>