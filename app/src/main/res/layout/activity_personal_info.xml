<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b3b3b3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#FF212121"
            android:textSize="14sp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王二"
            android:textColor="#FFBDBDBD"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFE0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="与法人关系"
            android:textColor="#FF212121"
            android:textSize="14sp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_arrow_right_small"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="本人"
            android:textColor="#FF212121"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFE0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="婚姻状况"
            android:textColor="#FF212121"
            android:textSize="14sp" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_marriage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_arrow_right_small"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="请选择"
            android:textColor="#FF212121"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFE0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/ll_positive_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/shape_gray_border_radius_0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add_positive_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_add" />

                <ImageView
                    android:id="@+id/iv_positive_id_card"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/shape_gray_border_radius_0"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/fl_positive_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="#99000000">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_upload_picture" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:text="重新上传"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@color/black"
                        android:layout_gravity="bottom"
                        android:layout_height="26dp" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/icon_red_exclamation_small"
                android:text="身份证正面"
                android:textColor="#FF212121"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（必填）"
                android:textColor="#FF000000"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_negative_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/shape_gray_border_radius_0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add_negative_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_add" />

                <ImageView
                    android:id="@+id/iv_negative_id_card"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/shape_gray_border_radius_0"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/fl_negative_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="#99000000">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_upload_picture" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="重新上传"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@color/black"
                        android:layout_gravity="bottom"
                        android:layout_height="26dp" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/icon_red_exclamation_small"
                android:text="身份证反面"
                android:textColor="#FF212121"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（必填）"
                android:textColor="#FF000000"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_hand_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/shape_gray_border_radius_0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add_hold_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_add" />

                <ImageView
                    android:id="@+id/iv_hold_id_card"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/shape_gray_border_radius_0"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/fl_hold_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="#99000000">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_upload_picture" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="重新上传"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@color/black"
                        android:layout_gravity="bottom"
                        android:layout_height="26dp" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_hold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/icon_red_exclamation_small"
                android:text="手持身份证"
                android:textColor="#FF212121"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（必填）"
                android:textColor="#FF000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_to_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_blue_solid_radius_2"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="提交"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp" />
</LinearLayout>